<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="StudentChecker">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#seDeconnecter" text="Se déconnecter" />
              <MenuItem mnemonicParsing="false" onAction="#fermer" text="Fermer" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Administration" />
          <Menu mnemonicParsing="false" text="Aide" />
        </menus>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </MenuBar>
   </top>
   <bottom>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Selectionnez une classe souhaitée pour accéder à ses étudiants." BorderPane.alignment="CENTER">
         <font>
            <Font size="15.0" />
         </font>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
      </Text>
   </bottom>
   <center>
      <TableView BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="Nom" />
          <TableColumn prefWidth="75.0" text="Prenom" />
            <TableColumn prefWidth="75.0" text="Present" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="20.0" right="20.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <left>
      <TableView BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="Promotion" />
          <TableColumn prefWidth="75.0" text="Classe" />
            <TableColumn prefWidth="75.0" text="Années" />
            <TableColumn prefWidth="75.0" text="Elèves" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </left>
</BorderPane>
